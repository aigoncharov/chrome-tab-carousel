{
  "name": "Simple Tab Carousel",
  "version": "0.1.0",
  "description": "Tab carousel which pauses on a window focus",
  "manifest_version": 2,
  "background": {
    "scripts": ["dist/background.js"],
    "persistent": false
  },
  "permissions": ["storage"],
  "browser_action": {},
  "options_ui": {
    "page": "dist/options.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "favicon16.png",
    "32": "favicon32.png",
    "48": "favicon48.png",
    "128": "favicon128.png"
  }
}
